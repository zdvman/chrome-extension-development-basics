{
  "manifest_version": 3,
  "name": "My First Extension",
  "version": "1.0",
  "description": "This is the description for my first extension",
  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_icon": {
      "32": "icon.png"
    },
    "default_title": "Click to open panel"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["sidePanel"],
  "side_panel": {
    "default_path": "index.html"
  }
}
