{
  "manifest_version": 3,
  "name": "Search Text Extension",
  "version": "1.0.0",
  "description": "Select text and easily search it up via your preferred search engine.",
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "128": "images/icon.png"
  },
  "action": {
    "default_icon": {
      "32": "images/icon.png"
    },
    "default_popup": "index.html",
    "default_title": "Open Popup"
  },
  "permissions": ["contextMenus", "storage"]
}
